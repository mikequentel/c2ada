#!/bin/sh
#
# Initial configuration script for c2ada.

cat >Makefile.config <<EOF
# Generated by 'setup'; don't bother to edit!
EOF

case `uname` in
    Darwin)
	cat >>Makefile.config <<EOF
YACC = yacc
EXTRA_LIBS =
EOF
	;;
    Linux)
	cat >>Makefile.config <<EOF
YACC = yacc
EXTRA_LIBS =
EOF
	;;
    SunOS)
	cat >>Makefile.config <<EOF
YACC = "bison -y"
EXTRA_LIBS = "-lm -ltk -ltcl -lrt"
EOF
	;;
esac

touch hostinfo.h
