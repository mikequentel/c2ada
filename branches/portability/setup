#!/bin/sh
#
# Initial configuration script for c2ada.

cat >Makefile.config <<EOF
# Generated by 'setup'; don't bother to edit!
EOF

case `uname` in
    Darwin)
	cat >>Makefile.config <<EOF
YACC = yacc
EXTRA_LIBS =
EOF
	;;
    Linux)
	cat >>Makefile.config <<EOF
YACC = yacc
EXTRA_LIBS =
EOF
	;;
    SunOS)
	# This setup is for Solaris 10 1/06 with tools installed from
	# the Software Companion disk.
	cat >>Makefile.config <<EOF
EXTRA_LIBS = -L/usr/sfw/lib -ltk8.3 -ltcl8.3 -lm -lrt
PYTHON_TOP = /usr/sfw
PYTHON_VER = python2.3
EOF
	;;
esac

[ -r hostinfo.h ] || touch hostinfo.h
